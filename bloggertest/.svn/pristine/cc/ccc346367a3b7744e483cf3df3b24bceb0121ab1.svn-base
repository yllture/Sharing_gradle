        <script type="text/javascript">
        function pay(obj)
        {
//         	alert(obj);
        	var integral=100;
        	var price=10;
        	if(obj==1){integral=100;price=10.00;}
        	if(obj==2){integral=200;price=19.80;}
        	if(obj==3){integral=500;price=49.00;}
        	if(obj==4){integral=1000;price=98.00;}
        	    $("#integralnum").text(integral);
        	    $("#price").text(price);
				$('#purchase-bankModal').modal('show');	
        }
        function topay(){
        	 var integral=$("#integralnum").text();
        	 var userid=1;
        	 if(integral==100)type=1;
        	 if(integral==200)type=2;
        	 if(integral==500)type=3;
        	 if(integral==1000)type=4;
        	 if(document.getElementsByName("pay")[0].checked) 
        		 {
        		 window.location.href="/toalipay?type="+type;	 
        		 }
        	 if(document.getElementsByName("pay")[1].checked)
    		 {
        		 window.location.href="/paypal/pay?userid="+userid+"&type="+type;
    		 }
        		 
        	// window.location.href="/paypal/pay?userid="+userid+"&type="+type;
        	 //var userid=${session.currentuser.userid};
        }

		
		function alipay(){
			$("#paypal").attr("checked").value(false);
			$("#alipay").attr("checked").value(true);
		}
		
		function paypal(){
			$("#paypal").attr("checked").value(true);
			$("#alipay").attr("checked").value(false);
		}
		
		
	</script>
       
