    <script>
      var form = layui.form
        ,layer = layui.layer;
      layui.use(['layer', 'form', 'element', 'laydate'], function () {
          var layer = layui.layer, form = layui.form, element = layui.element, laydate = layui.laydate;;
          lay('.test-item').each(function () {
              laydate.render({
                  elem: '#starttime'
                  ,type:'datetime'
                  , format: 'yyyy-MM-dd HH:mm:ss'   
                  , trigger: 'click'
              });
              laydate.render({
                  elem: '#endtime'
                  ,type:'datetime'
                  , format: 'yyyy-MM-dd HH:mm:ss'   
                  , trigger: 'click'
              });
          });
          form.render();
      });
      $(function(){
			//alert(11);
			$.ajax({
				url:'toSetWorkList',
				type:'post',
				/* data:{}, */
				dataType:'text',
				success:function(res){
					//alert(1);
					var obj=JSON.parse(res);
				    var paper=obj.paperlist;
				    var code=obj.code;
				    //alert(paper.length);
				    if(code==6000){
				    	alert("权限不够，请先切换到教师角色！");
						top.location.href="toGroup";
				    }else{
					    var addown=' ';
					    addown="<option value=''></option>"
					    for(var i=0;i<paper.length;i++){
					    	//alert(paper[i].papername);
					    	addown+="<option value='"+i;
					    	addown+="' id='"+paper[i].paperid+"'>"+paper[i].papername+"</option>";
					    }
					    $(".paper-list").append(addown); 
					    form.render('select');
				    }
				   
				}
			});
		});
      var selected;
      var content;
      var starttime;
      var endtime;
      form.on('select', function(data){
    	  selected=$(data.elem).find("option:selected").attr('id'); //得到select原始DOM对象
  	  }); 
      
      function upbut(){
    	//alert(1);
    	content=$('#content').val();
    	starttime=$('#starttime').val();
    	endtime=$('#endtime').val();
    	alert(selected+" "+content+" "+starttime+" "+endtime+" ");
      	//alert(groupname+" "+type+" "+base64url);
      	$.ajax({
              contentType : "application/x-www-form-urlencoded; charset=utf-8",
              type : "post",
              url : "setWork",
              data : {
                  'selected' : selected,
                  'content':content,
                  'starttime':starttime,
                  'endtime':endtime
              },
              dataType : 'text',
              success : function(res) {
              	//dconsole.log(res);
  				var data = JSON.parse(res);
  				//alert(data.code);
  				if(data.code=='0000'){
  					alert("发布成功!");
  					//$('input').val("");
  					top.location.href="toGroup";
  				}else{
  					alert("发布失败！");
  				}
              }
          })
      }
    </script>
