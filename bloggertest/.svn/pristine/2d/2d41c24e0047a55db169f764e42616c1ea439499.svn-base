                	var data = JSON.parse(res);
					//alert(data.code);
					if(data.code=='0000'){
						alert("编辑成功!");
						//$('input').val("");
						top.location.href="toGroup";
					}else{
						alert("编辑失败！");
					}
                }
            })
            return;
    	}
	  	//alert(type);
	  	//alert(groupname+" "+type+" "+base64url);
	  	$.ajax({
	          contentType : "application/x-www-form-urlencoded; charset=utf-8",
	          type : "post",
	          url : "editGroup",
	          data : {
	              'image' : base64url,
	              'groupname':groupname,
	              'type':type
	          },
	          dataType : 'text',
	          success : function(res) {
	          	//dconsole.log(res);
					var data = JSON.parse(res);
					//alert(data.code);
					if(data.code=='0000'){
						alert("编辑成功!");
						//$('input').val("");
						top.location.href="toGroup";
					}else{
						alert("编辑失败！");
					}
	          }
	      })
	  }
    </script>
</body>
